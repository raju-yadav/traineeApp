package validators;

import org.springframework.stereotype.Component;
import org.springframework.validation.BindingResult;
import org.springframework.validation.ValidationUtils;

@Component
public class AccomodationValidator {

	public void validate(BindingResult errors) {
		ValidationUtils.rejectIfEmptyOrWhitespace(errors, "arrName", "arrName.required");
		ValidationUtils.rejectIfEmptyOrWhitespace(errors, "dateOfArrivals", "dateOfArrivals.required");
		ValidationUtils.rejectIfEmptyOrWhitespace(errors, "coutry", "coutry.required");
		ValidationUtils.rejectIfEmptyOrWhitespace(errors, "state", "state.required");
		ValidationUtils.rejectIfEmptyOrWhitespace(errors, "place", "place.required");
		
	}
}
