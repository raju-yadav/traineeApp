package validators;

import model.Login;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
import org.springframework.validation.Errors;

import service.LoginService;

@Component
public class LoginValidator {
	
	@Autowired
	private LoginService loginService;

	public void validate(YogaLogin yogaLogin, Errors errors) {
		if (yogaLogin.getUserName().equals("")) {
			errors.rejectValue("userName", "userName");
		} else if (yogaLogin.getPassword().equals("")) {
			errors.rejectValue("password", "password");
		}
		if (errors.getErrorCount() == 0){
			dbValidation(yogaLogin, errors);
		}
			
	}

	private void dbValidation(YogaLogin yogaLogin, Errors errors) {
		YogaLogin user = loginService.userCheck(yogaLogin);
		if (user == null) {
			errors.rejectValue("userName", "loginName.notValid");
		}
	}
}
