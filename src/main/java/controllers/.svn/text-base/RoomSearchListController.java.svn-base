package controllers;

import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpSession;

import model.CommonBean;
import model.YogaBuildingRoom;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.support.SessionStatus;

import service.AccomodationService;

@Controller
@Transactional
public class RoomSearchListController extends ManagementControllerSupport {
	
	@Autowired
	private AccomodationService accomodationService;
	
	@RequestMapping("/accomodation/roomAvailability.htm")
	public String showForm(HttpSession session, Map<String, Object> model) {
		loadCommonData(session, model);
       
		return "/management/roomSearchForm";
	}
	
	
	@RequestMapping(value = "/accomodation/roomSearch.htm")
	public String search(HttpSession session,
			@ModelAttribute("searchBean") CommonBean searchBean,
			SessionStatus status, Map<String, Object> model) {

		loadCommonData(session, model);
		List<YogaBuildingRoom> searchBeans = accomodationService.getAvailableRoom(searchBean);
		model.put("searchBeans",searchBeans);
		status.setComplete();
		return "/management/roomSearchForm";
	}
}
