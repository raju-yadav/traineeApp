<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>Login - YogaApp</title>

<link
	href="${pageContext.request.contextPath}/css/ui-lightness/jquery-ui-1.7.2.custom.css"
	rel="stylesheet" />
<link href="${pageContext.request.contextPath}/css/style.css"
	rel="stylesheet" />
</head>
<body bgcolor="#ffffff">
<p>
<form name="loginForm" method="post">
<table width="100%" height="100%" border="0" align="center"
	cellpadding="0" cellspacing="0" bgcolor="#F4A460">
	<tr >
		<td width="60%" align="justify"><img src="images/1.bmp" height="100" width="15%"/>,<img
			src="images/2.bmp" height="100" width="15%"/>,<img src="images/3.bmp"
			height="100" width="15%"/></td>
		<td width="40%" align="justify">
		<h2><font color=#ffffff>Yoga&nbsp;Ashram&nbsp;Management</font></h2>
		</td>
	</tr>
</table>
<br><br><br><br><br><br><br><br>
<table width="30%" height="50%" border="0" align="center"
	class="menu_box">
	<tr>
		<td height="10" colspan="2" align="center">
		<span class="body_title">&nbsp;&nbsp;&nbsp;&nbsp;Member's Login </span>
		</td>
	</tr>
	<tr>
		<td height="34" colspan="2" align="center">
			&nbsp;
		</td>
	</tr>
	<spring:bind path="yogaLogin.userName">
		<tr>
			<td align="right" width="30%"><font color="#63B8FF">Username&nbsp;</font></td>
			<td width="70%" align="left" bgcolor="#ffffff"><input
				type="text" value="<c:out value="${status.value}"/>"
				name="<c:out value="${status.expression}"/>"></input> <c:if
				test="${status.error}">
				<c:forEach items="${status.errorMessages}" var="error">
					<c:out value="${error}" />
				</c:forEach>
			</c:if></td>
		</tr>
	</spring:bind>
	<spring:bind path="yogaLogin.password">
		<tr>
			<td width="30%" align="right"><font color="#63B8FF">Password&nbsp;</font></td>
			<td  width="70%" align="left" bgcolor="#ffffff"><input type="password"
				value="<c:out value="${status.value}"/>"
				name="<c:out value="${status.expression}"/>"></input> <c:if
				test="${status.error}">
				<c:forEach items="${status.errorMessages}" var="error">
					<c:out value="${error}" />
				</c:forEach>
			</c:if></td>
		</tr>
	</spring:bind>

	<tr>
		<td height="51" bgcolor="#ffffff" colspan="2" align="center">
	
			<input	type="submit" tabindex="3" name="login" value="Login" class="Button" /><input
			type="reset" tabindex="4" name="reset" value="Reset" class="Button" /></td>
	</tr>
</table>
</form>
</P>
</p>
<p>&nbsp;</p>
<p>&nbsp;</p>
<p>&nbsp;</p>

</body>
</html>