<jsp:include page="../header.jsp">
	<jsp:param value="Accomodation Details" name="pageTitle" />
</jsp:include>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="spring"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<spring:form modelAttribute="commonBean" action="save.htm">

	<table width="50%" class="menu_box" align="center">

		<tr>
			<td align="left"><spring:label path="arrName">Arrivals Name:</spring:label></td>
			<td align="left">${commonBean.arrName}</td>
			<td align="left"><spring:label path="arrSpritualName">Spritual Name:</spring:label></td>
			<td align="left">${commonBean.arrSpritualName}</td>
		</tr>

		<tr>
			<td align="left"><spring:label path="headName">Group Head Name:</spring:label></td>
			<td align="left">${commonBean.headName}</td>
			<td align="left"><spring:label path="arrSex">Sex:</spring:label></td>
			<td align="left">${commonBean.arrSex}</td>
		</tr>

		<tr>
			<td align="left"><spring:label path="dateOfArrivals">Date Of Arrivals:</spring:label></td>
			<td align="left"><fmt:formatDate
				value="${commonBean.dateOfArrivals}" /></td>
			<td align="left"><spring:label path="dateOfDeparture">Date Of Departure:</spring:label></td>
			<td align="left"><fmt:formatDate
				value="${commonBean.dateOfDeparture}" /></td>
		</tr>

		<tr>
			<td align="left"><spring:label path="dateOfBirth">Date Of Birth:</spring:label></td>
			<td align="left"><fmt:formatDate
				value="${commonBean.dateOfBirth}" /></td>
			<td align="left"><spring:label path="emailId">EmailId:</spring:label></td>
			<td align="left">${commonBean.emailId}</td>
		</tr>

		<tr>
			<td align="left"><spring:label path="mobileNumber">Contact No.:</spring:label></td>
			<td align="left">${commonBean.mobileNumber}</td>
			<td align="left"><spring:label path="coutry">Country:</spring:label></td>
			<td align="left">${commonBean.coutry}</td>
		</tr>

		<tr>
			<td align="left"><spring:label path="state">State:</spring:label></td>
			<td align="left">${commonBean.state}</td>
			<td align="left"><spring:label path="place">Place:</spring:label></td>
			<td align="left">${commonBean.place}</td>
		</tr>

		<tr>
			<td align="left"><spring:label path="addressLine1">Address</spring:label></td>
			<td align="left"><spring:textarea path="addressLine1"
				readonly="true" /></td>
			<td align="left"><spring:label path="zipCode">Zip Code:</spring:label></td>
			<td align="left">${commonBean.zipCode}</td>
		</tr>

		<tr>
			<td align="left"><spring:label path="arrKarmaYoga">KarmaYoga:</spring:label></td>
			<td align="left">${commonBean.arrKarmaYoga}</td>
			<td align="left"><spring:label path="purposeOfVisit">Purpose Of Visit:</spring:label></td>
			<td align="left">${commonBean.purposeOfVisit}</td>
		</tr>
		
	</table>
	<table width="50%" class="menu_box" align="center">
		<tr bgcolor="#c0c0c0">
			<th>Select</th>
			<th>Arrivals Name</th>
			<th>Head Name</th>
			<th>Date Of Arrivals</th>
		</tr>

		<c:forEach items="${arrivalsList}" var="list">
			<tr>
				<td align="center"><spring:radiobutton path="radioArr" value="${list.arrivalId}"/></td>
				<td align="center"><a href="#"><c:out value="${list.arrName}" /></a></td>
				<td align="center"><c:out value="${list.arrivalsGroup.headName}" /></td>
				<td align="center"><fmt:formatDate
					value="${list.dateOfArrivals}" /></td>
			</tr>
		</c:forEach>

	</table>
	<table width="50%" align="center" class="menu_box">
	<tr><td align="center"><h2>Available Rooms</h2></td></tr></table>
	<c:if test="${availableRoomList != null}">
		<table width="50%" align="center" class="menu_box">
			<tr bgcolor="#c0c0c0">
			    <th>Select</th>
				<th>Property Name</th>
				<th>Building Name</th>
				<th>Room No.</th>
				<th>Bed No.</th>
			</tr>
			<c:forEach items="${availableRoomList}" var="searchBeans">
				<tr>
				    <td align="center"><spring:radiobutton path="radioRoom" value="${searchBeans.buildingRoomId}" /></td>
					<td align="center">${searchBeans.yogaProperty.propertyName}</td>
					<td align="center">${searchBeans.yogaBuilding.buildingName}</td>
					<td align="center">${searchBeans.yogaRoom.roomNumber}</td>
					<td align="center">${searchBeans.yogaBed.bedName}</td>
				</tr>
			</c:forEach>
		</table>
	</c:if>
	<table align="center">
			<tr>
				<td align="center"><input type="submit" value="Save" /></td>
				<td align="center"><input type="submit" value="Add More"
					name="more" /></td>
			</tr>
		</table>
	
</spring:form>
<%@include file="../footer.jsp"%>