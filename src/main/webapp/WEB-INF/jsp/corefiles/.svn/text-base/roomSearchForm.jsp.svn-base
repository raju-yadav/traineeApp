<jsp:include page="../header.jsp">
	<jsp:param value="Accomodation Details" name="pageTitle" />
</jsp:include>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="spring"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>


<spring:form modelAttribute="searchBean" action="roomSearch.htm">
	<table width="70%" class="menu_box" align="center">
		<tr>
			<td><spring:label path="propertyName">Property Name:</spring:label></td>
			<td><spring:input path="propertyName" /></td>
			<td><spring:label path="buildingName">Building Name:</spring:label></td>
			<td><spring:input path="buildingName" /></td>
			<td><spring:label path="roomNumber">Room No.:</spring:label></td>
			<td><spring:input path="roomNumber" /></td>
			<td><input type="submit" value="Search" /></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
		</tr>
	</table>
<c:if test="${searchBeans != null}">
<table width="70%" align="center" class="menu_box">
	<tr bgcolor="#c0c0c0">
		<th><spring:label path="propertyName">Property Name</spring:label></th>
		<th><spring:label path="buildingName">Building Name</spring:label></th>
		<th><spring:label path="roomNumber">Room No.</spring:label></th>
		<th><spring:label path="arrName">Arrival's Name</spring:label></th>
	</tr>
	<c:forEach items="${searchBeans}" var="searchBeans">
	<tr>
		<td align="center">${searchBeans.yogaProperty.propertyName}</td>
		<td align="center">${searchBeans.yogaBuilding.buildingName}</td>
		<td align="center">${searchBeans.yogaRoom.roomNumber}</td>
		<td align="center">${searchBeans.expectedArrivals.arrName}</td>
	</tr>
	</c:forEach>
</table>
</c:if>
</spring:form>
<%@include file="../footer.jsp"%>

